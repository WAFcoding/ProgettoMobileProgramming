<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_listview"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/albumArt"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:contentDescription="@string/content"
            android:src="@drawable/icon" />
        
        <LinearLayout  
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:orientation="horizontal">
		     <TextView
		        android:id="@+id/txtFileName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="4dp"
		        android:gravity="center"
		        android:layout_gravity="center"
		        android:textColor="#FFCC99"
		        android:labelFor="@+id/fileNameTrack"
		        android:text="@string/titolo" />
		     <EditText
	            android:id="@+id/fileNameTrack"
	            android:imeOptions="actionDone"
	            android:layout_width="0dip"
	            android:layout_height="20dp"
	            android:layout_margin="4dp"
	            android:padding="1dp"
	            android:background="@android:color/transparent"
    			android:textSize="15sp"
	            android:gravity="center"
	            android:layout_gravity="center"
	            android:layout_weight="1.0"
	            android:inputType="text"
	            android:textColor="#6666FF"
	            android:textStyle="italic"
	            android:text="TextView" />
		     <!--  <EditText 
		         android:id="@+id/edtFileNameTitle"
		         android:layout_width="0dip"
	             android:layout_height="0dip"
	             android:inputType="text"
		         />
		     -->
		 </LinearLayout>
		 <LinearLayout  
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:orientation="horizontal">
	
		    <TextView
		        android:id="@+id/artista2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="4dp"
		        android:gravity="center"
		        android:layout_gravity="center"
		        android:labelFor="@id/songArtist"
		        android:textColor="#FFCC99"
		        android:text="@string/artista" />
		    
		     <EditText
	            android:id="@+id/songArtist"
	            android:layout_width="0dip"
	            android:layout_height="20dp"
	            android:layout_margin="4dp"
	            android:padding="1dp"
	            android:textSize="15sp"
	            android:gravity="center"
	            android:inputType="text"
	            android:layout_gravity="center"
	            android:layout_weight="1.0"
	            android:textColor="#6666FF"
	            android:textStyle="italic"
	            android:labelFor="@+id/edtSongArtist"
	            android:text="TextView" />
		     <!--   <EditText 
		         android:id="@+id/edtSongArtist"
		         android:layout_width="0dip"
	             android:layout_height="0dip"
	             android:inputType="text"
		         />
		      -->
		 </LinearLayout>
		 <LinearLayout  
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:orientation="horizontal">
	
		     <TextView
		        android:id="@+id/album"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="4dp"
		        android:gravity="center"
		        android:layout_gravity="center"      
		        android:textColor="#FFCC99"
		        android:labelFor="@+id/albumName"
		        android:text="@string/album" />
		    
		     <EditText
	            android:id="@+id/albumName"
	            android:layout_width="0dip"
	            android:layout_height="20dp"
	            android:layout_margin="4dp"
	            android:padding="1dp"
	            android:textSize="15sp"
	            android:gravity="center"
	            android:inputType="text"
	            android:layout_gravity="center"
	            android:layout_weight="1.0"
	            android:textColor="#6666FF"
	            android:textStyle="italic"
	            android:text="TextView" />
		    
	    </LinearLayout>
	    <LinearLayout  
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:orientation="horizontal">
		    <TextView
		        android:id="@+id/genere"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="4dp"
		        android:gravity="center"
		        android:layout_gravity="center"
		        android:textColor="#FFCC99"
		        android:labelFor="@+id/kind"
		        android:text="@string/genere" />
	     	<EditText
	            android:id="@+id/kind"
	            android:layout_width="0dip"
	           	android:layout_height="20dp"
	            android:layout_margin="4dp"
	            android:padding="1dp"
	            android:textSize="15sp"
	            android:gravity="center"
	            android:inputType="text"
	            android:layout_gravity="center"
	            android:layout_weight="1.0"
	            android:textColor="#6666FF"
	            android:textStyle="italic"
	            android:text="TextView" />
	     	
	     	
	     </LinearLayout>
	     
	    <LinearLayout  
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:orientation="horizontal">
		    <TextView
		        android:id="@+id/duration"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="4dp"   
		        android:gravity="center"
		        android:layout_gravity="center"
		        android:textColor="#FFCC99"
		        android:labelFor="@+id/duration1"
		        android:text="@string/durata" />
	     	<TextView
	            android:id="@+id/duration1"
	            android:layout_width="0dip"
	            android:layout_height="20dp"
	            android:layout_margin="4dp"
	            android:textSize="15sp"
	            android:gravity="center"
	            android:layout_gravity="center"
	            android:layout_weight="1.0"
	            android:textColor="#6666FF"
	            android:textStyle="italic"
	            android:text="TextView" />
	     	<EditText 
		         android:id="@+id/edtDuration1"
		         android:layout_width="0dip"
	             android:layout_height="0dip"
	             android:inputType="text"
		         /> 
	     	
	     </LinearLayout>
	     
          <LinearLayout
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginBottom="5dp"
		     android:layout_marginLeft="5dp"
		     android:layout_marginRight="5dp"
	         android:orientation="horizontal" >
	         <TextView
	             android:id="@+id/lengthTrack"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_margin="4dp"         
	             android:text="@string/classification"
	             android:textColor="#FFCC99" />
      
	         <LinearLayout
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
		         android:layout_gravity="center"
	         	 android:gravity="center"
		         android:orientation="horizontal" >
	         <ImageButton
	             android:id="@+id/star1"
	             android:layout_width="30dp"
	             android:layout_height="30dp"
	             android:layout_gravity="center" 
	             android:layout_marginRight="7dp"
	             android:background="@android:color/transparent"
	             android:scaleType="fitXY"
	             android:src="@drawable/star_silver" />
	         <ImageButton
	             android:id="@+id/star2"
	             android:layout_width="30dp"
	             android:layout_height="30dp"
	             android:layout_gravity="center"
	             android:layout_marginRight="7dp"
	             android:background="@android:color/transparent"
	             android:scaleType="fitXY"
	             android:src="@drawable/star_silver" />
	         <ImageButton
	             android:id="@+id/star3"
	             android:layout_width="30dp"
	             android:layout_height="30dp"
	             android:layout_gravity="center"
	             android:layout_marginRight="7dp"
	             android:background="@android:color/transparent"
	             android:scaleType="fitXY"
	             android:src="@drawable/star_silver" />
	         <ImageButton
	             android:id="@+id/star4"
	             android:layout_width="30dp"
	             android:layout_height="30dp"
	             android:layout_gravity="center"
	             android:layout_marginRight="7dp"
	             android:background="@android:color/transparent"
	             android:scaleType="fitXY"
	             android:src="@drawable/star_silver" />
	         <ImageButton
	             android:id="@+id/star5"
	             android:layout_width="30dp"
	             android:layout_height="30dp"
	             android:layout_gravity="center"
	             android:background="@android:color/transparent"
	             android:scaleType="fitXY"
	             android:src="@drawable/star_silver" />
	        </LinearLayout>
	     </LinearLayout>
	     <Button
			     android:id="@+id/exitButton"
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
			     android:layout_marginTop="15dp"
			     android:layout_marginBottom="5dp"
		    	 android:layout_marginLeft="5dp"
		    	 android:layout_marginRight="5dp"
			     android:layout_gravity="center"      
			     android:text="@string/txtButton"
			     android:background="@drawable/ellipse_button" />
        
    </LinearLayout>

</ScrollView>