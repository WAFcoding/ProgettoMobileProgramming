<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
   	 android:layout_height="wrap_content"
   	 android:layout_margin="3dp"
   	 android:orientation="horizontal"
    >
    
    <TextView
         android:id="@+id/text_view_item"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentStart="true"
         android:layout_centerVertical="true"
         android:layout_margin="3dp"
         android:maxLength="34"
         android:text="Medium Text"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="#6666FF"
         android:textSize="20sp"
         android:textStyle="bold" />

     <Button
         android:id="@+id/button_pl1"
         style="?android:attr/buttonStyleSmall"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/button_pl2"
         android:layout_alignBottom="@+id/button_pl2"
         android:layout_margin="3dp"
         android:layout_marginEnd="5dp"
         android:layout_toStartOf="@+id/button_pl2"
         android:background="@drawable/ellipse_button"
         android:textColor="@android:color/white"
         android:text="Button" />
     
     <Button
         android:id="@+id/button_pl2"
         style="?android:attr/buttonStyleSmall"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_alignParentTop="true"
         android:layout_margin="3dp"
         android:layout_marginStart="5dp"
         android:background="@drawable/ellipse_button"
         android:textColor="@android:color/white"
         android:text="Button" />


</RelativeLayout>