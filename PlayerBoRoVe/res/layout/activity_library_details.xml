<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview_library_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_listview"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/albumArt_library_details"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:contentDescription="@string/content"
            android:src="@drawable/icon" />
        <!-- numero totale brani -->
        <LinearLayout  
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:orientation="horizontal"
	            android:singleLine="true" 
		        android:ellipsize="marquee"
		        android:marqueeRepeatLimit ="marquee_forever"
		        android:focusable="true"
		        android:focusableInTouchMode="true" 
		        android:scrollHorizontally="true" >
		     <TextView
		        android:id="@+id/txt_total_tracks"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="4dp"
		        android:gravity="center"
		        android:layout_gravity="center"
		        android:textColor="#FFCC99"
		        android:labelFor="@+id/etxt_n_total_tracks"
		        android:text="@string/activity_details_n_tracks" />
		     <TextView
	            android:id="@+id/etxt_n_total_tracks"
	            android:imeOptions="actionDone"
	            android:layout_width="0dip"
	            android:layout_height="20dp"
	            android:layout_margin="4dp"
	            android:padding="1dp"
	            android:background="@android:color/transparent"
    			android:textSize="15sp"
	            android:gravity="center"
	            android:layout_gravity="center"
	            android:layout_weight="1.0"
	            android:textColor="#6666FF"
	            android:textStyle="italic"
	            android:text="" />
		 </LinearLayout>
        <!-- durata totale -->
		 <LinearLayout  
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:orientation="horizontal">
	
		    <TextView
		        android:id="@+id/txt_total_duration"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="4dp"
		        android:gravity="center"
		        android:layout_gravity="center"
		        android:labelFor="@+id/etxt_total_duration"
		        android:textColor="#FFCC99"
		        android:text="@string/activity_details_total_duration" />
		    
		     <TextView
	            android:id="@+id/etxt_total_duration"
	            android:layout_width="0dip"
	            android:layout_height="20dp"
	            android:layout_margin="4dp"
	            android:padding="1dp"
	            android:textSize="15sp"
	            android:gravity="center"
	            android:layout_gravity="center"
	            android:layout_weight="1.0"
	            android:textColor="#6666FF"
	            android:textStyle="italic"
	            android:text=""
	            android:singleLine="true" 
		        android:ellipsize="marquee"
		        android:marqueeRepeatLimit ="marquee_forever"
		        android:focusable="true"
		        android:focusableInTouchMode="true" 
		        android:scrollHorizontally="true"  />
		 </LinearLayout>
        <!-- memoria totale -->
		 <LinearLayout  
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:orientation="horizontal">
		     <TextView
		        android:id="@+id/txt_total_memory"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="4dp"
		        android:gravity="center"
		        android:layout_gravity="center"      
		        android:textColor="#FFCC99"
		        android:labelFor="@+id/etxt_total_memory"
		        android:text="@string/activity_details_total_memory" />
		     <TextView
	            android:id="@+id/etxt_total_memory"
	            android:layout_width="0dip"
	            android:layout_height="20dp"
	            android:layout_margin="4dp"
	            android:padding="1dp"
	            android:textSize="15sp"
	            android:gravity="center"
	            android:layout_gravity="center"
	            android:layout_weight="1.0"
	            android:textColor="#6666FF"
	            android:textStyle="italic"
	            android:text=""
	            android:singleLine="true" 
		        android:ellipsize="marquee"
		        android:marqueeRepeatLimit ="marquee_forever"
		        android:focusable="true"
		        android:focusableInTouchMode="true" 
		        android:scrollHorizontally="true"  />
	    </LinearLayout>
        <!-- file più grande -->
	    <LinearLayout  
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/txt_biggest_track"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="4dp"
		        android:gravity="center"
		        android:layout_gravity="center"
		        android:textColor="#FFCC99"
		        android:labelFor="@+id/etxt_biggest_track"
		        android:text="@string/activity_details_biggest_track" />
	     	<TextView
	            android:id="@+id/etxt_biggest_track"
	            android:layout_width="0dip"
	           	android:layout_height="20dp"
	            android:layout_margin="4dp"
	            android:padding="1dp"
	            android:textSize="15sp"
	            android:gravity="center"
	            android:layout_gravity="center"
	            android:layout_weight="1.0"
	            android:textColor="#6666FF"
	            android:textStyle="italic"
	            android:text=""
	            android:singleLine="true" 
		        android:ellipsize="marquee"
		        android:marqueeRepeatLimit ="marquee_forever"
		        android:focusable="true"
		        android:focusableInTouchMode="true" 
		        android:scrollHorizontally="true"  />
	     </LinearLayout>
        <!-- file più lungo -->
	    <LinearLayout  
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/txt_longest_track"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="4dp"   
		        android:gravity="center"
		        android:layout_gravity="center"
		        android:textColor="#FFCC99"
		        android:labelFor="@+id/duration1"
		        android:text="@string/activity_details_longest_track"/>
	     	<TextView
	            android:id="@+id/etxt_longest_track"
	            android:layout_width="0dip"
	           	android:layout_height="20dp"
	            android:layout_margin="4dp"
	            android:padding="1dp"
	            android:textSize="15sp"
	            android:gravity="center"
	            android:layout_gravity="center"
	            android:layout_weight="1.0"
	            android:textColor="#6666FF"
	            android:textStyle="italic"
	            android:text=""
	            android:singleLine="true" 
		        android:ellipsize="marquee"
		        android:marqueeRepeatLimit ="marquee_forever"
		        android:focusable="true"
		        android:focusableInTouchMode="true" 
		        android:scrollHorizontally="true" />
	     	
	     </LinearLayout>
        
    </LinearLayout>

</ScrollView>