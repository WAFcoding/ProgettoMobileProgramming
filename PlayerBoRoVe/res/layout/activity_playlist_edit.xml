<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_listview"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/rel_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_edit_playlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="4dp"
            android:labelFor="@+id/etxt_edit_playlist_name"
            android:text="@string/edit_playlist_title"
            android:textColor="#FFCC99" />

        <EditText
            android:id="@+id/etxt_edit_playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_edit_playlist_name"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:padding="1dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textStyle="italic" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_edit_playlist_name"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:padding="3dp"
            android:text="@string/edit_playlist_edit_title_btn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_layout_1" >

        <Button
            android:id="@+id/btn_edit_playlist_add_track"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:padding="3dp"
            android:text="@string/edit_playlist_add_track_btn" />

        <Button
            android:id="@+id/btn_edit_playlist_remove_track"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:padding="3dp"
            android:text="@string/edit_playlist_remove_track_btn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_layout_2" >

        <ListView
            android:id="@+id/list_view_edit_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>