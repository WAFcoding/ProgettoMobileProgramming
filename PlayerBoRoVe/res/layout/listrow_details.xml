<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:layout_marginTop="4dp"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/imageView_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="left"
        android:src="@drawable/icon"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
 
	    <TextView
	        android:id="@+id/lblListItem"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        
	        android:textSize="20sp"
	        android:textColor="#00ffff"
	        android:textStyle="bold"
	        android:text="testo brano"
	        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft" />
	    
    	<TextView
	        android:id="@+id/authorItem"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:textSize="16sp"
	        
	        android:text="Author"
	        android:textColor="#008080"
	        android:textStyle="italic"
	        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft" />
    	
    	  
    	<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:orientation="horizontal">
	        
    	    <ImageView
	             android:id="@+id/star10"
	             android:layout_width="20dp"
	             android:layout_height="20dp"
	             android:layout_gravity="center" 
	             android:layout_marginRight="5dp"
	             android:background="@android:color/transparent"
	             android:scaleType="fitXY"
	             android:src="@drawable/star_silver" />
	         <ImageView
	             android:id="@+id/star20"
	             android:layout_width="20dp"
	             android:layout_height="20dp"
	             android:layout_gravity="center"
	             android:layout_marginRight="5dp"
	             android:background="@android:color/transparent"
	             android:scaleType="fitXY"
	             android:src="@drawable/star_silver" />
	         <ImageView
	             android:id="@+id/star30"
	             android:layout_width="20dp"
	             android:layout_height="20dp"
	             android:layout_gravity="center"
	             android:layout_marginRight="5dp"
	             android:background="@android:color/transparent"
	             android:scaleType="fitXY"
	             android:src="@drawable/star_silver" />
	         <ImageView
	             android:id="@+id/star40"
	             android:layout_width="20dp"
	             android:layout_height="20dp"
	             android:layout_gravity="center"
	             android:layout_marginRight="5dp"
	             android:background="@android:color/transparent"
	             android:scaleType="fitXY"
	             android:src="@drawable/star_silver" />
	         <ImageView
	             android:id="@+id/star50"
	             android:layout_width="20dp"
	             android:layout_height="20dp"
	             android:layout_gravity="center"
	             android:background="@android:color/transparent"
	             android:scaleType="fitXY"
	             android:src="@drawable/star_silver" />
    	    
    	    
	    </LinearLayout>
	    
    
    
    
    
    
    
    
    
    
    
	    </LinearLayout>
 
</LinearLayout>